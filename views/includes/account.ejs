<div id="content">
    <form action="/update" method="POST" id="form">
        <div id="accountInfo">
            <h3 class="header"><%= header %></h3>
            <div id="userInfo">
                <div id="name">
                    <input
                        type="text"
                        value="<%= account.firstName %>"
                        class="firstName"
                    />
                    <input
                        type="text"
                        value="<%= account.lastName %>"
                        class="lastName"
                    />
                </div>

                <input
                    type="email"
                    value="<%= account.email %>"
                    class="email"
                />
                <a href="/logout">Logout</a>
                <a href="/delete">Delete account</a>
            </div>
        </div>
    </form>
</div>
